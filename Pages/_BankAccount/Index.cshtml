@page
@model LZDemo.Pages._BankAccount.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Bank Accounts</h1>


<a class="text-decoration-none text-white btn btn-primary mb-2" asp-page="Create">Create New</a>

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BankAccount[0].AccountName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BankAccount[0].Balance)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BankAccount)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountName)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td class="text-end">
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

