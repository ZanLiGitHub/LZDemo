@page
@model LZDemo.Pages._MoneyIn.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Money In</h1>


<a class="text-decoration-none text-white btn btn-primary mb-2" asp-page="Create">Create New</a>

<div class="card">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MoneyIn[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoneyIn[0].Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoneyIn[0].Details)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoneyIn[0].ReceiptNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoneyIn[0].TotalReceipts)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MoneyIn[0].GST)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MoneyIn)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReceiptNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalReceipts)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GST)
                    </td>
                    <td class="text-end">
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

